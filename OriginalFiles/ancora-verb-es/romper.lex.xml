      </argument>
      <examples>
        <example>
cristales rompiéndose sin motivo
        </example>
        <example>
romperse la unidad sindical
        </example>
      </examples>
    </frame>
    <frame lss="B22.unaccusative-passive-transitive" type="passive">
      <argument argument="arg1" function="suj" thematicrole="pat"/>
      <argument argument="arg0" function="cag" thematicrole="agt"/>
      <examples>
        <example>
la tregua se rompió unilateralmente por ETA
        </example>
      </examples>
    </frame>
    <frame lss="C21.state-attributive" type="resultative">
      <argument argument="arg1" function="suj" thematicrole="tem"/>
      <examples>
        <example>
rotas las cadenas
        </example>
      </examples>
    </frame>
  </sense>
  <sense id="2">
