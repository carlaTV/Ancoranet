<lexentry lemma="tardar" lng="es" type="verb">
  <sense id="1">
    <frame default="yes" lss="A23.transitive-agentive-extension" type="default">
      <argument argument="arg0" function="suj" thematicrole="agt"/>
      <argument argument="arg1" function="cd" functype="quantitative" thematicrole="ext"/>
      <argument argument="arg2" function="creg" thematicrole="tem">
        <constituent preposition="en" type="sp"/>
        <constituent preposition="para" type="sp"/>
      </argument>
      <examples>
        <example>
La Ertzaintza tardó cerca de una hora en hacer acto de presencia en el lugar de los hechos
        </example>
        <example>
La retirada no tardará dos años
        </example>
        <example>
Las pruebas tardarán dos años en completarse
        </example>
        <example>
Yo tardé mucho tiempo en enterarme de que no había tal voz
        </example>
      </examples>
    </frame>
    <frame lss="A23.transitive-agentive-extension" type="impersonal">
      <argument argument="arg1" function="cd" functype="quantitative" thematicrole="ext"/>
      <argument argument="arg2" function="creg" thematicrole="tem">
        <constituent preposition="en" type="sp"/>
      </argument>
      <examples>
        <example>
no puede ser que se tarde ocho meses para dar un permiso de residencia
        </example>
      </examples>
    </frame>
  </sense>
  <sense id="2">
    <frame default="yes" lss="C31.state-scalar" type="default">
      <argument argument="arg1" function="suj" thematicrole="tem"/>
      <argument argument="arg2" function="cd" thematicrole="ext"/>
      <argument argument="argM" function="cc" thematicrole="adv">
        <constituent preposition="a" type="sp"/>
      </argument>
      <examples>
        <example>
la pieza tardó
        </example>
      </examples>
    </frame>
  </sense>
</lexentry>
