<lexentry lemma="requerir" lng="es" type="verb">
  <sense id="1">
    <frame default="yes" lss="A21.transitive-agentive-patient" type="default">
      <argument argument="arg0" function="suj" thematicrole="agt"/>
      <argument argument="arg1" function="cd" thematicrole="pat"/>
      <argument argument="argM" function="cc" thematicrole="adv">
        <constituent preposition="por" type="sp"/>
      </argument>
      <examples>
        <example>
eso requerirá un mayor esfuerzo por su parte
        </example>
        <example>
que no requiera gastos de manutención
        </example>
        <example>
Creerselo todo requiere una aplicación constante
        </example>
      </examples>
    </frame>
    <frame lss="B22.unaccusative-passive-transitive" type="passive">
      <argument argument="arg1" function="suj" thematicrole="pat"/>
      <examples>
        <example>
todo lo que se requiere
        </example>
      </examples>
    </frame>
    <frame lss="B21.unaccusative-state" type="benefactive">
      <argument argument="arg1" function="suj" thematicrole="pat"/>
      <argument argument="arg2" function="ci" thematicrole="ben"/>
      <argument argument="argM" function="cc" thematicrole="tmp"/>
      <examples>
        <example>
cuando se le requirió a finales de marzo de 1999 que precisase las inversiones de esa diócesis
        </example>
      </examples>
    </frame>
  </sense>
  <sense id="2">
    <frame default="yes" lss="A22.transitive-agentive-theme" type="default">
      <argument argument="arg0" function="suj" thematicrole="agt"/>
      <argument argument="arg1" function="creg" thematicrole="tem">
        <constituent preposition="de" type="sp"/>
      </argument>
      <examples>
        <example>
el tipo de fractura, al no ser limpia, ha requerido de esta ayuda
        </example>
      </examples>
    </frame>
    <frame lss="A22.transitive-agentive-theme" type="impersonal">
      <argument argument="arg1" function="creg" thematicrole="tem">
        <constituent preposition="de" type="sp"/>
      </argument>
      <examples>
        <example>
se requiere de la oportunidad
        </example>
      </examples>
    </frame>
  </sense>
</lexentry>
