<lexentry lemma="despedir" lng="es" type="verb">
  <sense id="1">
    <frame default="yes" lss="A21.transitive-agentive-patient" type="default">
      <argument argument="arg0" function="suj" thematicrole="agt"/>
      <argument argument="arg1" function="cd" thematicrole="pat">
        <constituent preposition="a" type="sp"/>
      </argument>
      <argument argument="argM" function="cc" thematicrole="tmp"/>
      <argument argument="argM" function="cc" thematicrole="loc"/>
      <examples>
        <example>
*0* despedirá a 2.300 empleados más antes de finales del año dentro_del proceso de saneamiento
        </example>
        <example>
Un grupo de artistas ecuatorianes despidio hoy a la moneda nacional
        </example>
      </examples>
    </frame>
    <frame lss="B22.unaccusative-passive-transitive" type="passive">
      <argument argument="arg1" function="suj" thematicrole="pat"/>
      <argument argument="argM" function="cc" thematicrole="tmp">
        <constituent preposition="durante" type="sp"/>
      </argument>
      <examples>
        <example>
470 fueron despedidos durante el primer trimestre
        </example>
      </examples>
    </frame>
  </sense>
  <sense id="2">
    <frame default="yes" lss="A22.transitive-agentive-theme" type="default">
      <argument argument="arg0" function="suj" thematicrole="agt"/>
      <argument argument="arg1" function="creg" thematicrole="tem">
        <constituent preposition="de" type="sp"/>
      </argument>
      <argument argument="argM" function="cc" thematicrole="tmp"/>
      <argument argument="argM" function="cc" thematicrole="adv">
        <constituent preposition="con" type="sp"/>
      </argument>
      <examples>
        <example>
Chávez se despidió del mundanal ruido el pasado_jueves con su más breve discurso por televisión
        </example>
      </examples>
    </frame>
  </sense>
  <sense id="3">
    <frame default="yes" lss="A31.ditransitive-patient-locative" type="default">
      <argument argument="arg0" function="suj" thematicrole="agt"/>
      <argument argument="arg1" function="cd" thematicrole="pat"/>
      <argument argument="arg2" function="cc" thematicrole="loc"/>
    </frame>
    <frame lss="B12.unaccusative-passive-ditransitive" type="passive">
      <argument argument="arg1" function="suj" thematicrole="pat"/>
      <argument argument="arg2" function="cc" thematicrole="loc"/>
      <argument argument="argM" function="cc" thematicrole="adv"/>
      <examples>
        <example>
salió despedido varios metros
        </example>
      </examples>
    </frame>
  </sense>
</lexentry>
